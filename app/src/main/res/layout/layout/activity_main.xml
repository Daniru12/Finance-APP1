<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ðŸ”· Balance Box - Enhanced with gradients and better spacing -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="22dp"
                    android:background="@color/purple">



                    <TextView
                        android:id="@+id/balanceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available Balance"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/totalBalanceValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LKR 0.00"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_below="@id/balanceLabel"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp" />

                    <!-- Income - Enhanced with icons -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/oo"
                                android:layout_marginEnd="4dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Income"
                                android:textColor="@android:color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/incomeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LKR 0.00"
                            android:textColor="@android:color/holo_green_light"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Expense - Enhanced with icons -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/rre"
                               android:layout_marginEnd="4dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Expense"
                                android:textColor="@android:color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/expenseValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LKR 0.00"
                            android:textColor="@android:color/holo_red_light"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Budget Button - Enhanced with better styling -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSetBudget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Monthly Budget"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                app:cornerRadius="12dp"
                android:elevation="4dp"
                android:textAllCaps="false"
                android:backgroundTint="#6200EE"
                android:textColor="@android:color/white"/>

            <!-- Analytics Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expense Analytics"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="8dp"
                android:textColor="#333333" />

            <!-- ðŸ“Š Pie Chart - Enhanced with card background -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_margin="12dp"/>
            </androidx.cardview.widget.CardView>

            <!-- ðŸ§¾ Last Transaction Card - Enhanced design -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Last Transaction"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSeeAll"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="See All"
                            android:textAllCaps="false"
                            android:textSize="12sp"
                            app:cornerRadius="20dp"
                            android:backgroundTint="#E8E9FF"
                            android:textColor="#6200EE" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">



                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/lastCategoryValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Category"
                                android:textColor="@android:color/black"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Today, 12:30 PM"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="14sp"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/lastAmountValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LKR 0.00"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/holo_green_dark"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ðŸ“… Today's Transactions - Enhanced with title and styling -->
            <!-- ðŸ“… Today's Transactions - Enhanced with styling and template items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Today's Transactions"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#333333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="April 21, 2025"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Container for today's transactions -->
            <LinearLayout
                android:id="@+id/todayTransactionsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="80dp">

                <!-- Transaction Item Template (Grocery) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Category Icon -->

                        <!-- Transaction Details -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Grocery Shopping"
                                android:textColor="@android:color/black"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="12:30 PM"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="14sp"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <!-- Transaction Amount -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- LKR 2,500.00"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/holo_red_light"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Transaction Item Template (Salary) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Category Icon -->

                        <!-- Transaction Details -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Monthly Salary"
                                android:textColor="@android:color/black"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="09:15 AM"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="14sp"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <!-- Transaction Amount -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+ LKR 75,000.00"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/holo_green_dark"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Transaction Item Template (Transportation) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Category Icon -->

                        <!-- Transaction Details -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Taxi Fare"
                                android:textColor="@android:color/black"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="10:45 AM"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="14sp"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <!-- Transaction Amount -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- LKR 800.00"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/holo_red_light"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Empty State for when there are no transactions -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/emptyTransactionsCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center">



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No Transactions Today"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tap the + button to add a new transaction"
                            android:textAlignment="center"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- âž• Floating Action Button - Enhanced design -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:contentDescription="Add Transaction"
        android:text="Add"
        android:textColor="@android:color/white"
        app:iconTint="@android:color/white"
        app:icon="@android:drawable/ic_input_add"
        android:backgroundTint="#6200EE" />
</RelativeLayout>